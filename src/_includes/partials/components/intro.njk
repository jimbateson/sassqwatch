<header class="[ intro ] [ pad-top-900 pad-bottom-max ]">
  <div class="[ inner-wrapper ] [ sf-flow ]">
	<div class="md:width-half">
		<h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ leading-loose text-900 md:text-max ] [ p-name ]">{{ introHeading }}</h1>
		{% if introSummary %}
		<div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
		{% endif %}
	</div>

	<div class="md:width-half intro__image">
		<img src="/images/mascot-holding.svg" alt="" loading="eager" alt="Sassqwatch mascot illustration">
	</div>
  </div>
</header>
